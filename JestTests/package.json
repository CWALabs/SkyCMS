{
  "name": "skycms-jest-tests",
  "version": "1.0.0",
  "description": "JavaScript testing for SkyCMS",
  "private": true,
  "scripts": {
    "test": "jest --testPathPattern=unit",
    "test:watch": "jest --testPathPattern=unit --watch",
    "test:coverage": "jest --testPathPattern=unit --coverage",
    "test:unit:api": "jest tests/unit/api",
    "test:unit:editor": "jest tests/unit/editor",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:integration:api": "jest tests/integration/api --runInBand",
    "test:all": "jest --runInBand"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "../Sky.Cms.Api.Shared/**/*.js",
      "../Editor/wwwroot/**/*.js",
      "!**/node_modules/**",
      "!**/lib/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/setup.js"
    ]
  }
}
