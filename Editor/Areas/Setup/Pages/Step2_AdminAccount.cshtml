@page
@model Sky.Editor.Areas.Setup.Pages.Step2_AdminAccount
@{
    ViewData["Title"] = "Administrator Account";
    Layout = "_LayoutSetup";
}

@await Html.PartialAsync("_SetupStepIndicator", 2)

<h2>Create Administrator Account</h2>
<p class="text-muted">Set up the initial administrator account for your SkyCMS installation</p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<form method="post" id="adminForm">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SetupId)
    <div class="card mb-4 bg-secondary text-light">
        <div class="card-header">
            <h5>Administrator Credentials</h5>
        </div>
        <div class="card-body">
            <div class="form-group mb-3">
                <label asp-for="AdminEmail" class="form-label">Email Address <span class="text-danger">*</span></label>
                <input asp-for="AdminEmail" required type="email" class="form-control" placeholder="my-name@example.com" />
                <span asp-validation-for="AdminEmail" class="text-danger"></span>
                <small class="form-text text-light">This will be your username for logging in</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AdminPassword" class="form-label">Password <span class="text-danger">*</span></label>
                <input asp-for="AdminPassword" type="password" class="form-control" id="adminPassword" required />
                <span asp-validation-for="AdminPassword" class="text-danger"></span>
                <div class="form-text text-light">
                    <small>
                        Password must be at least 8 characters and contain:
                        <ul class="mb-0">
                            <li id="length-check">At least 8 characters</li>
                            <li id="uppercase-check">One uppercase letter</li>
                            <li id="lowercase-check">One lowercase letter</li>
                            <li id="number-check">One number</li>
                            <li id="special-check">One special character (!@@#$%^&*)</li>
                        </ul>
                    </small>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <small id="password-match" class="form-text"></small>
            </div>

        </div>
    </div>

    <div class="alert alert-info">
        <strong><i class="fas fa-info-circle"></i> Note:</strong>
        The administrator account will be assigned to the <strong>Administrators</strong> role with full system access.
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="@Url.Page("./Step1_Storage")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
            Next <i class="fas fa-arrow-right"></i>
        </button>
    </div>

</form>

@section Scripts {
    <script>

        $(document).ready(function() {
            var form = $('#adminForm');
            var submitBtn = $('#submitBtn');
            
            // Configure validation
            $.validator.setDefaults({
                highlight: function(element) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                unhighlight: function(element) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                },
                errorElement: 'span',
                errorClass: 'text-danger',
                errorPlacement: function(error, element) {
                    error.insertAfter(element);
                }
            });

            // Add custom password validation - FIXED REGEX
            $.validator.addMethod('strongPassword', function(value, element) {
                return this.optional(element) || 
                    /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@@#$%^&*]).{8,}$/.test(value);
            }, 'Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character');

            $('#adminPassword').rules('add', {
                required: true,
                minlength: 8,
                strongPassword: true
            });

            $('#confirmPassword').rules('add', {
                required: true,
                equalTo: '#adminPassword',
                messages: {
                    equalTo: 'Passwords do not match'
                }
            });

            function validatePassword() {
                const password = $('#adminPassword').val();
                let allValid = true;

                // Length check
                if (password.length >= 8) {
                    $('#length-check').css('color', 'white').html('✓ At least 8 characters');
                } else {
                    $('#length-check').css('color', 'inherit').html('At least 8 characters');
                    allValid = false;
                }

                // Uppercase check
                if (/[A-Z]/.test(password)) {
                    $('#uppercase-check').css('color', 'white').html('✓ One uppercase letter');
                } else {
                    $('#uppercase-check').css('color', 'inherit').html('One uppercase letter');
                    allValid = false;
                }

                // Lowercase check
                if (/[a-z]/.test(password)) {
                    $('#lowercase-check').css('color', 'white').html('✓ One lowercase letter');
                } else {
                    $('#lowercase-check').css('color', 'inherit').html('One lowercase letter');
                    allValid = false;
                }

                // Number check
                if (/[0-9]/.test(password)) {
                    $('#number-check').css('color', 'white').html('✓ One number');
                } else {
                    $('#number-check').css('color', 'inherit').html('One number');
                    allValid = false;
                }

                // Special character check - FIXED REGEX
                if (/[!@@#$%^&*]/.test(password)) {
                    $('#special-check').css('color', 'white').html('✓ One special character (!@@#$%^&*)');
                } else {
                    $('#special-check').css('color', 'inherit').html('One special character (!@@#$%^&*)');
                    allValid = false;
                }

                return allValid;
            }

            function checkPasswordMatch() {
                const password = $('#adminPassword').val();
                const confirm = $('#confirmPassword').val();

                if (confirm.length > 0) {
                    if (password === confirm) {
                        $('#password-match').text('✓ Passwords match').css('color', 'white');
                        return true;
                    } else {
                        $('#password-match').text('✗ Passwords do not match').css('color', 'inherit');
                        return false;
                    }
                } else {
                    $('#password-match').text('');
                    return false;
                }
            }

            function updateSubmitButton() {
                const email = $('#AdminEmail').val();
                const passwordValid = validatePassword();
                const passwordsMatch = checkPasswordMatch();
                const emailValid = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(email);

                submitBtn.prop('disabled', !(emailValid && passwordValid && passwordsMatch && $('#confirmPassword').val().length > 0));
            }

            $('#adminPassword').on('input', updateSubmitButton);
            $('#confirmPassword').on('input', updateSubmitButton);
            $('#AdminEmail').on('input', updateSubmitButton);

            // Initial check
            updateSubmitButton();
        });
    </script>
}
