@page "/___diagnostics"
@model Sky.Editor.Pages.Diagnostics.IndexModel
@{
    Layout = null;
    var title = $"Cosmos CMS Configuration Diagnostics - {Model.Result?.Mode ?? "Unknown"} Mode";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }

        .header h1 {
            font-size: 28px;
            margin-bottom: 10px;
        }

        .header .mode {
            font-size: 18px;
            opacity: 0.9;
            font-weight: 300;
        }

        .summary {
            padding: 20px 30px;
            background: @(Model.Result?.IsValid == true ? "#d4edda" : "#f8d7da");
            border-bottom: 1px solid @(Model.Result?.IsValid == true ? "#c3e6cb" : "#f5c6cb");
        }

        .summary-content {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .summary-icon {
            font-size: 40px;
        }

        .summary-text h2 {
            font-size: 20px;
            color: @(Model.Result?.IsValid == true ? "#155724" : "#721c24");
            margin-bottom: 5px;
        }

        .summary-text p {
            color: @(Model.Result?.IsValid == true ? "#155724" : "#721c24");
            opacity: 0.8;
        }

        .content {
            padding: 30px;
        }

        .category {
            margin-bottom: 30px;
        }

        .category-title {
            font-size: 18px;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #667eea;
        }

        .check {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid #ccc;
        }

        .check.success {
            border-left-color: #28a745;
            background: #f0f9f4;
        }

        .check.warning {
            border-left-color: #ffc107;
            background: #fffbf0;
        }

        .check.error {
            border-left-color: #dc3545;
            background: #fef5f6;
        }

        .check-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 8px;
        }

        .check-icon {
            font-size: 24px;
            flex-shrink: 0;
        }

        .check-title {
            flex: 1;
        }

        .check-name {
            font-size: 16px;
            font-weight: 600;
            color: #333;
        }

        .check-description {
            font-size: 13px;
            color: #6c757d;
        }

        .check-message {
            font-size: 14px;
            color: #495057;
            margin-top: 8px;
            padding-left: 34px;
        }

        .check-details {
            font-size: 13px;
            color: #6c757d;
            margin-top: 8px;
            padding-left: 34px;
            font-family: "Courier New", monospace;
            background: white;
            padding: 12px;
            border-radius: 4px;
            white-space: pre-wrap;
            word-break: break-all;
        }

        .footer {
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #dee2e6;
            text-align: center;
            color: #6c757d;
            font-size: 14px;
        }

        .note {
            background: #e7f3ff;
            border-left: 4px solid #2196F3;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }

        .note-title {
            font-weight: 600;
            color: #1976D2;
            margin-bottom: 5px;
        }

        .note-text {
            color: #0d47a1;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>🔧 Configuration Diagnostics</h1>
            <div class="mode">@Model.Result?.Mode Mode</div>
        </div>

        @if (Model.Result != null)
        {
            <div class="summary">
                <div class="summary-content">
                    <div class="summary-icon">
                        @if (Model.Result.IsValid)
                        {
                            <span>✅</span>
                        }
                        else
                        {
                            <span>❌</span>
                        }
                    </div>
                    <div class="summary-text">
                        <h2>@(Model.Result.IsValid ? "Configuration Valid" : "Configuration Issues Detected")</h2>
                        <p>
                            @{
                                var successCount = Model.Result.Checks.Count(c => c.Status == Sky.Editor.Services.Diagnostics.CheckStatus.Success);
                                var warningCount = Model.Result.Checks.Count(c => c.Status == Sky.Editor.Services.Diagnostics.CheckStatus.Warning);
                                var errorCount = Model.Result.Checks.Count(c => c.Status == Sky.Editor.Services.Diagnostics.CheckStatus.Error);
                            }
                            @successCount passed, @warningCount warnings, @errorCount errors
                        </p>
                    </div>
                </div>
            </div>

            @if (!Model.Result.IsValid)
            {
                <div class="content">
                    <div class="note">
                        <div class="note-title">⚠️ Action Required</div>
                        <div class="note-text">
                            Please fix the configuration errors below before the application can start properly.
                            Update your configuration files (appsettings.json, User Secrets, or environment variables) and restart the application.
                        </div>
                    </div>
                </div>
            }

            <div class="content">
                @foreach (var category in Model.Result.Checks.GroupBy(c => c.Category))
                {
                    <div class="category">
                        <div class="category-title">@category.Key</div>

                        @foreach (var check in category)
                        {
                            var statusClass = check.Status.ToString().ToLowerInvariant();
                            var icon = check.Status switch
                            {
                                Sky.Editor.Services.Diagnostics.CheckStatus.Success => "✅",
                                Sky.Editor.Services.Diagnostics.CheckStatus.Warning => "⚠️",
                                Sky.Editor.Services.Diagnostics.CheckStatus.Error => "❌",
                                _ => "❓"
                            };

                            <div class="check @statusClass">
                                <div class="check-header">
                                    <div class="check-icon">@icon</div>
                                    <div class="check-title">
                                        <div class="check-name">@check.Name</div>
                                        <div class="check-description">@check.Description</div>
                                    </div>
                                </div>
                                <div class="check-message">@check.Message</div>
                                @if (!string.IsNullOrWhiteSpace(check.Details))
                                {
                                    <div class="check-details">@check.Details</div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="content">
                <div class="note">
                    <div class="note-title">⚠️ Validation Error</div>
                    <div class="note-text">Unable to validate configuration. Please check application logs.</div>
                </div>
            </div>
        }

        <div class="footer">
            <p>This diagnostic page is only visible when <strong>CosmosAllowSetup</strong> is set to <strong>true</strong>.</p>
            <p style="margin-top: 5px;">Set it to <strong>false</strong> in production environments.</p>
        </div>
    </div>
</body>
</html>