@model Sky.Editor.Models.Blogs.BlogEntryListItem
@{
    ViewData["Title"] = "Delete Blog Entry";
}
<div class="pt-3">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="text-light">Delete Blog Entry</h3>
                <div class="text-light">
                    Are you sure you want to delete: <strong>@Model.Title</strong> ?
                </div>
                <form method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a class="btn btn-secondary" href="javascript:history.back()">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
