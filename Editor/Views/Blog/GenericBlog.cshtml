@model IEnumerable<Cosmos.Common.Data.CatalogEntry>
@{
    Layout = null; // Adjust or remove if you want site layout
    var blogKey = Model.FirstOrDefault()?.BlogKey ?? "blog";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@blogKey Blog</title>
    <meta name="description" content="Latest posts for blog '@blogKey'">
    <style>
        body { font-family: system-ui, Arial, sans-serif; margin: 2rem; line-height: 1.5; }
        .post { margin-bottom: 2.5rem; }
        .post h2 { margin-bottom: .3rem; }
        .meta { color:#666; font-size:.85rem; margin-bottom:.75rem; }
        .intro { margin-top:.5rem; }
    </style>
</head>
<body>
    <header>
        <h1>@blogKey Blog</h1>
        <p>Recent posts</p>
        <hr />
    </header>
    <main>
        @foreach (var p in Model)
        {
            <article class="post">
                <h2><a href="/@p.UrlPath">@p.Title</a></h2>
                <div class="meta">
                    @(p.Published?.ToString("yyyy-MM-dd") ?? "Unpublished") • Updated @p.Updated.ToString("yyyy-MM-dd HH:mm 'UTC'")
                </div>
                @if (!string.IsNullOrWhiteSpace(p.Introduction))
                {
                    <div class="intro">@p.Introduction</div>
                }
            </article>
        }
    </main>
</body>
</html>